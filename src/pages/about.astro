---
import Layout from "../layouts/Layout.astro";
import Section from "../layouts/Section.astro";
import OurVision from "../components/OurVision.astro";
import CoreValues from "../components/CoreValues.astro";
import OurTeam from "../components/OurTeam.astro";
import FAQ from "../components/FAQ.astro";
import Newsletter from "../components/Newsletter.astro";
---

<Layout>
    <Section class="hero">
        <img src="../img/about_hero.jpg" alt="">
        <div class="hero_overlay">
            <p class="label">Services</p>
            <h1>Creative Services For Boost Your Business Growth</h1>
        </div>
    </Section>
    <Section theme="white">
        <OurVision></OurVision>
    </Section>
    <Section theme="grey" >
    <CoreValues></CoreValues> <!--btnVariant er ikke sat, da den er default primary -->
  </Section>
  <Section theme="white">
    <OurTeam></OurTeam>
  </Section>
    <Section>
         <FAQ></FAQ>
    </Section>
     <Section>
        <Newsletter></Newsletter>
     </Section>
</Layout>

<style>
@layer components {
    .hero {
        grid-template-columns: subgrid;
        grid-template-rows: 1fr;
        display: flex;
    }
    img {
        grid-column: full;
        grid-row: 1/2;
        object-fit: cover;
    }
    .hero_overlay {
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: var(--space-s);
        margin-block: var(--space-3xl);
        margin-inline-end: calc(var(--space-3xl) * 2);
        border-radius: 30px;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(5.5px);
        grid-row: 1/2;
        padding: var(--space-xl);

        .label {
        background-color: var(--color-primary01-yellow);
        }
    }

    @media (width < 600px) {
    .hero_overlay {
        margin-inline-end: 0rem;
    }
    }
}
</style>